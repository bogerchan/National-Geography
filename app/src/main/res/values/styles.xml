<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/quick_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NGTitleBarText">
        <item name="android:textSize">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NGTitleBarIcon">
        <item name="android:textSize">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@drawable/selector_fg_text</item>
    </style>

    <style name="AppTheme.CardFlowItemText">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.LoadingText">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.LoadingErrorText">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@drawable/selector_fg_text</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.IconText">
        <item name="android:textSize">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/selector_fg_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.OverlayMenuText">
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@drawable/selector_fg_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.SplashText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/colorNGYellow50</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.NGCardShowIntroTitleText">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppTheme.NGCardShowIntroContentText">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppTheme.NGCardShowMenuIcon">
        <item name="android:textSize">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/selector_fg_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NGCardShowMenuText">
        <item name="android:textSize">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/selector_fg_text</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
